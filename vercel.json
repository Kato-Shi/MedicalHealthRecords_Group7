{
  "version": 2,
  "installCommand": "npm install && npm install --prefix frontend && npm install --prefix api",
  "builds": [
    { "src": "frontend/next.config.js", "use": "@vercel/next" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
